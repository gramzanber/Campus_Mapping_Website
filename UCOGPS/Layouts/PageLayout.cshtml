@using Microsoft.AspNet.Http;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="google-site-verification" content="IrK0jVzF3Pv_F83MbFG1I2sNrnVFrT99TWd6vabmmu0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <style>
        body
        {
            margin-top:5%;
            background: #474747 url(bg.png);
            color:white;
            text-align:center;
        }
        .button 
        {
            background-color: #474747;
            border: 1px solid black;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            transition-duration: 0.5s;
        }
        input, select
        {
            color:black;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">UCOGPS</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Campus Map", "CampusMap", "MappingSystem")
                    </li>
                    @if(Context.Session.GetString("Username") == "admin")
                    {
                    <li>
                        @Html.ActionLink("Add Building", "AddBuilding", "MappingSystem")
                    </li>
                    }
                    @if ((Context.Session.GetString("Username") == null) || (Context.Session.GetString("Username") == ""))
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "LoginSystem")
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Logout", "Logout", "LoginSystem")
                        </li>
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
        @RenderBody()
</body>
</html>
